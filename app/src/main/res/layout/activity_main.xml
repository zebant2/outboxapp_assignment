<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#b1deb5"
    android:layout_height="match_parent"
    tools:context="com.example.hp.chinesetry.MainActivity">

    <Button
        android:id="@+id/practice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="#ffdb00"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:layout_marginTop="20dp"
        android:text="PRACTICE"
        android:onClick="gotopractice"
        />

    <Button
        android:id="@+id/basics1"
        android:background="#ffdb00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/practice"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="66dp"
        android:layout_toLeftOf="@+id/practice"
        android:layout_toStartOf="@+id/practice"
        android:text="BASICS 1"
        android:onClick="gotobasics1"
        />

    <Button
        android:id="@+id/basic2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:text="BASICS 2"
        android:background="#ffdb00"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_below="@+id/basics1"
        android:layout_toRightOf="@+id/basics1"
        android:layout_toEndOf="@+id/basics1"
        android:onClick="gotobasics2"
        />

    <ImageView android:id="@+id/mainshifu"
        android:layout_width="1000dp"
        android:layout_height="1000dp"
        android:src="@drawable/shifumain"
        android:layout_gravity="center"
        android:layout_below="@+id/basic2"
        android:layout_marginTop="30dp"
        android:layout_toStartOf="@+id/basic2" />

</RelativeLayout>
